<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:id="@+id/root">

			<ImageView
				android:id="@+id/previewV"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:layout_margin="15dp"/>

			<TextView
				android:textSize="20sp"
				android:textAlignment="center"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:text=""
				android:id="@+id/mainTextViewCode"
				android:gravity="center"/>

			<SeekBar
				android:progressDrawable="@drawable/red_seekbar"
				android:max="255"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/mainSeekBarR"
				android:layout_margin="5dp"/>

			<SeekBar
				android:progressDrawable="@drawable/green_seekbar"
				android:max="255"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/mainSeekBarG"
				android:layout_margin="5dp"/>

			<SeekBar
				android:progressDrawable="@drawable/blue_seekbar"
				android:max="255"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/mainSeekBarB"
				android:layout_margin="5dp"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<android.support.design.widget.FloatingActionButton
					android:id="@+id/mainButtonRandom"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:src="@drawable/dices"
					android:tint="#ffffff"
					android:layout_gravity="bottom|center"
					app:elevation="6dp"
					android:layout_margin="5dp"/>

				<android.support.design.widget.FloatingActionButton
					android:id="@+id/fab"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:src="@drawable/wallpaper"
					android:layout_gravity="bottom|center"
					app:elevation="6dp"
					android:tint="#ffffff"
					android:layout_margin="5dp"/>

			</LinearLayout>

		</LinearLayout>
